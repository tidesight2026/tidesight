# AquaERP Environment Variables
# نسخ هذا الملف إلى .env وتعديل القيم حسب الحاجة

# Django Settings
SECRET_KEY=django-insecure-change-me-later-in-production-use-strong-random-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
POSTGRES_DB=aqua_erp_db
POSTGRES_USER=aqua_admin
POSTGRES_PASSWORD=secure_pass_123
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Language & Timezone
LANGUAGE_CODE=ar-sa
TIME_ZONE=Asia/Riyadh

# Static & Media Files (for production)
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media
STATIC_URL=/static/
MEDIA_URL=/media/

