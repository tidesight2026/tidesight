# AquaERP Production Environment Variables
# ⚠️ مهم: نسخ هذا الملف إلى .env.prod وتعديل القيم الحساسة
# ⚠️ لا ترفع ملف .env.prod على GitHub أبداً!

# =================================================
# Django Settings
# =================================================
# ⚠️ توليد SECRET_KEY جديد وقوي (50+ حرف) باستخدام:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# ⚠️ لا تستخدم القيمة الافتراضية أبداً في الإنتاج!
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-50-characters-long
DEBUG=False
ALLOWED_HOSTS=.aquaerp.com,aquaerp.com,api.aquaerp.com
CSRF_TRUSTED_ORIGINS=https://*.aquaerp.com,https://aquaerp.com,https://app.aquaerp.com

# =================================================
# CORS Configuration (Production)
# =================================================
# ⚠️ تحديد نطاقات Frontend المسموحة فقط
# مثال: https://app.aquaerp.com,https://admin.aquaerp.com
CORS_ALLOWED_ORIGINS=https://app.aquaerp.com,https://admin.aquaerp.com

# =================================================
# Database Configuration
# =================================================
# ⚠️ استخدام كلمات مرور معقدة في الإنتاج (32+ حرف، أحرف كبيرة وصغيرة، أرقام ورموز)
# ⚠️ لا تستخدم القيم الافتراضية في الإنتاج!
POSTGRES_DB=aqua_erp_db
POSTGRES_USER=aqua_admin
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_32_CHARS
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =================================================
# Redis Configuration
# =================================================
# ⚠️ تفعيل requirepass في Redis للإنتاج
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_REDIS_PASSWORD
CELERY_BROKER_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0

# =================================================
# Language & Timezone
# =================================================
LANGUAGE_CODE=ar-sa
TIME_ZONE=Asia/Riyadh

# =================================================
# Static & Media Files
# =================================================
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media
STATIC_URL=/static/
MEDIA_URL=/media/

# =================================================
# Security Settings (Production)
# =================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# =================================================
# Email Configuration
# =================================================
# استخدام خدمة بريد احترافية (SendGrid, AWS SES, Mailgun)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=YOUR_SENDGRID_API_KEY
DEFAULT_FROM_EMAIL=noreply@aquaerp.com

# =================================================
# ZATCA Configuration
# =================================================
# ⚠️ تخزين المفاتيح في AWS Secrets Manager أو HashiCorp Vault
# ⚠️ لا تخزن المفاتيح الخاصة في ملفات النظام المباشرة
ZATCA_SANDBOX=False
ZATCA_CSR_PATH=/app/secrets/zatca_csr.pem
ZATCA_PRIVATE_KEY_PATH=/app/secrets/zatca_private_key.pem
ZATCA_ENCRYPTION_KEY_PATH=/app/secrets/zatca_encryption_key.pem

# =================================================
# Sentry Error Tracking (Optional but Recommended)
# =================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# =================================================
# Logging
# =================================================
DJANGO_LOG_LEVEL=WARNING

